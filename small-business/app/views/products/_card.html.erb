
<div class="card-columns">
    <% @filtered.each do |product| %>
            
        <div class='card m-3 shadow' style="width: 270px; display: inline-block;">
            <%= image_tag("/assets/products/#{product.img_file}.jpg", class: 'card-img-top') %>
            <div class='card-body'>
                <h3  class='card-title' style='font-size: 1.4rem;'><%= product.item %></h3>
                <h4 class='card-subtitle text-muted' style='font-size: 1.2rem;'><%= "$ #{product.price}"%></h4>
                <p class='card-text'><%= "Condition: #{product.condition}" %></p>
                <%= link_to "View Details", "/products/#{product.pid}", class: "btn btn-outline-secondary" %>
                </div>
        </div>
    <% end %>
        
</div>



<% if product.quantiy == 'good'%>
    <% product.price = product.price.to_i - product.price.to_i*.10%>
    <div class='text-warning'><%= 'On sale!'%></div>
<% elsif product.quantiy == 'average'%>
    <% product.price = product.price.to_i - product.price.to_i*.20%>
    <div class='text-warning'><%= 'On sale!'%></div>
<% end %>
